<script>
  const burgerBtn = document.querySelector("#burger") as HTMLButtonElement;
  const mobileMenu = document.querySelector("#mobile-menu") as HTMLDivElement;
  const closeIcon = document.querySelector("#close") as HTMLButtonElement;

  // Open mobile menu when burger icon is clicked

  burgerBtn.addEventListener("click", () => {
    mobileMenu.classList.remove("hidden");
    burgerBtn.classList.add("hidden");
    closeIcon.classList.remove("hidden");
  });

  // Close mobile menu when close icon is clicked

  closeIcon.addEventListener("click", () => {
    mobileMenu.classList.add("hidden");
    burgerBtn.classList.remove("hidden");
    closeIcon.classList.add("hidden");
  });
</script>
